package labb1;
import java.util.*;
public class Email {
	public static void main(String []args){
		Scanner input = new Scanner(System.in);
		
		String name; 

		System.out.println("Skriv ditt hela ditt namn, pretty please:");
		name = input.nextLine();
		
		input.close();
		//Share
			create_email(name);	
	}
	public static String create_email(String username){
	
		String name = username;
		String mailuser; 
		int pos1;	
		
		pos1 = name.indexOf(" ");
		mailuser = name.substring(0, 3) + name.substring(pos1 + 1, pos1 + 5);		
				
		System.out.println(mailuser + "@student.hh.se");
		return name; 
	}
}
