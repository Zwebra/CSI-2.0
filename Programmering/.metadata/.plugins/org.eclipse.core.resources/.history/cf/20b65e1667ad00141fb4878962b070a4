import java.util.Scanner;
import java.io.FileNotFoundException;
import java.io.File;
import java.io.FileOutputStream;
import java.io.PrintStream;



 	public class Encrypt2{
 		public static void main (String [] arg) throws FileNotFoundException{

 			File ordlista = new File ("ordlista_sv_cryptolista.txt");
 			Scanner filescan;
			try {
				filescan = new Scanner(ordlista);

				while(filescan.hasNextLine()){
					String text =filescan.nextLine();
					System.out.println(text);
					String crypto = encrypt(text);
					decrypt(crypto);
					
					
					PrintStream out = new PrintStream(new FileOutputStream("file.txt"));
					
					System.setOut(out);
				}
			} catch (FileNotFoundException e) {
				e.printStackTrace();
			}

			
			
 			}
 			
 			public static String encrypt (String karl_text) {
 				
 				String krypt_text="";
 				String text = karl_text;

 	 			for(int i=0;i<text.length();i++){

 	 				int ascii_ny=(int)text.charAt(i)+1;

 	 			krypt_text=krypt_text+((char)ascii_ny);
 	 			
 	 			}
 	 				
 	 				System.out.println(krypt_text);
				return krypt_text;
 			}
 			public static String decrypt(String krypt_text){
 				
 				String text = krypt_text;
 				String decrypt ="";
 				
 				for(int i=0;i<text.length();i++){
 					int ascii_ny=(int)text.charAt(i)-1;
 					
 					decrypt= decrypt + ((char)ascii_ny);
 				}
 				System.out.println(decrypt);
 				return decrypt;
 			}
 			
}